set clipboard=unnamedplus
set smartcase
set incsearch
set hlsearch
set timeout
set timeoutlen=1000
set relativenumber
set surround
let mapleader = " "

" Basic
nnoremap \\r :source ~/.ideavimrc<CR>
noremap x "_x
noremap ,d "_d
noremap ,D "_D
nnoremap ,p :<C-u>action $Paste<CR>

" Move
nnoremap S :<C-u>action KJumpAction<CR>

" disable cursor keys
vnoremap  <Up>     <nop>
vnoremap  <Down>   <nop>
vnoremap  <Left>   <nop>
vnoremap  <Right>  <nop>
inoremap  <Up>     <nop>
inoremap  <Down>   <nop>
inoremap  <Left>   <nop>
inoremap  <Right>  <nop>
noremap   <Up>     <nop>
noremap   <Down>   <nop>
noremap   <Left>   <nop>
noremap   <Right>  <nop>

inoremap <silent> jj <ESC>
